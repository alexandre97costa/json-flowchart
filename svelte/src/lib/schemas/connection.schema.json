{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "/Connection",
    "$comment": "For passionfruit_v2",
    "title": "Connection",
    "description": "A connection schema to be referenced by flowchart.schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[\\w]{1}[\\w\\d\\-\\_]*$"
        },
        "start": {
            "type": "integer",
            "minimum": 1
        },
        "end": {
            "type": "integer",
            "minimum": 1
        }
    },
    "required": [
        "id",
        "start",
        "end"
    ]
}