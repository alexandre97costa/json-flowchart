{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "/Flowchart",
    "$comment": "For the papaya branch",
    "title": "Flowchart",
    "description": "A file that describes a multi-dimensional flow of execution.",
    "type": "object",
    "properties": {
        "plan": {
            "description": "A global wrapper of robots and other optional data",
            "type": "object",
            "properties": {
                "robots": {
                    "type": "array",
                    "items": {
                        "description": "A robot object",
                        "$ref": "/Robot"
                    }
                },
                "details": {
                    "type": "object",
                    "properties": {
                        "isEditing": {
                            "type": "boolean"
                        }
                    }
                }
            },
            "required": [
                "robots"
            ]
        }
    },
    "required": [
        "plan"
    ]
}