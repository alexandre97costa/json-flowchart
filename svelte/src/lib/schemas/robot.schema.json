{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "/Robot",
    "$comment": "For passionfruit_v2",
    "title": "Robot",
    "description": "A robot schema to be referenced by flowchart.schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[\\w]{1}[\\w\\d\\-\\_]*$"
        },
        "name": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "acronym": {
            "type": "string"
        },
        "status": {
            "type": "string"
        },
        "condition": {
            "type": "object",
            "properties": {
                "definition": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "id",
        "name",
        "acronym"
    ]
}