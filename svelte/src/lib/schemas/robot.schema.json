{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "/Robot",
    "$comment": "For the papaya branch",
    "title": "Robot",
    "description": "A robot schema to be referenced by flowchart.schema",
    "type": "object",
    "properties": {
        "id": {
            "type": ["string", "null"],
            "description": "Needs to start by a letter, and can only contain ASCII chars (excluding spaces)",
            "$comment": "Test this pattern here: https://regexr.com/7lr7l",
            "pattern": "^[\\w]{1}[\\w\\d\\-\\_]*$"
        },
        "parentID": {
            "$ref": "#/properties/id" 
        },
        "branches" : {
            "type": "integer",
            "minimum": 1
        },
        "conditionNumber": {
            "type": "integer",
            "minimum": 1
        },
        "name": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "acronym": {
            "type": "string"
        },
        "status": {
            "type": "string"
        }
    },
    "required": [
        "id",
        "parentID",
        "name"
    ]
}